    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "arkenv": "^0.7.3",
    "drizzle-orm": "^0.44.7",
    "elysia": "latest"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.31.6"
  },
  "module": "src/index.js"
}
